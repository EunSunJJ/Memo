<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.sunny.memo.post.repository.PostRepository">
  
  	<insert id="insertPost" parameterType="map">
  		INSERT INTO
  			`post`
  			(
  				`userId`
  				, `title`
				, `content` 
  			)
  			
  			VALUE
  			(
  				#{userId}
  				, #{title}
  				, #{content}
  			)
  			
  	</insert>
  	
  	<select id="selectoPostList" resultType="com.sunny.memo.post.domain.Post">
  		SELECT
  			`id`
			, `userId`
			, `title`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			조건추가하기
		ORDER BY
			`id` DESC
  			
  	
  	</select>
  </mapper>